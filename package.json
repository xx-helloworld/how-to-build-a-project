{
  "name": "how-to-build-a-project",
  "private": true,
  "workspaces": [
    "packages/typescript-jest/*",
    "packages/typescript/*",
    "packages/workspaces/*",
    "packages/uidemo/*",
    "packages/docs"
  ],
  "scripts": {
    "docs": "yarn workspace docs dev",
    "commit": "npx git-cz",
    "changelog": "node scripts/changelog.js run",
    "cz:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "bootstrap": "lerna run build && lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean",
    "test": "yarn jest",
    "release": "lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "lerna-changelog": "^0.8.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-merge": "npm install",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "commitizen": "^3.0.7",
    "conventional-changelog": "^3.0.6",
    "cz-customizable": "^5.10.0",
    "execa": "^1.0.0"
  }
}
